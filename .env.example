# SECURITY WARNING: Don't run with debug turned on in production!
DJANGO_DEBUG=False

# Django Secret Key (Generate a new random one for production)
DJANGO_SECRET_KEY=django-insecure-your-secret-key-here

# Allowed Hosts (comma separated)
ALLOWED_HOSTS=your-app-name.onrender.com

# Database (Render provides this automatically usually, but for reference)
# DB_ENGINE=mysql
# DB_NAME=
# DB_USER=
# DB_PASSWORD=
# DB_HOST=
# DB_PORT=3306

# Encryption Keys (CRITICAL: Must match across deployments to read data)
FIELD_ENCRYPTION_KEY=
HASH_PEPPER=

# SendGrid Configuration
# Get your API Key from SendGrid Dashboard -> Settings -> API Keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Customize the "From" email
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
